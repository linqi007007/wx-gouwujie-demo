/* component/w-tab-control/w-tab-control.wxss */

.tab-control {
  display: flex;
  flex-direction: row;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  
  
}

.tab-control .tab-item {
  flex: 1;
  text-align: center;
}

.tab-control .active {
  color: red;
}

.tab-control .active text {
  padding: 10rpx 15rpx;
  border-bottom: 10rpx solid red;
}
